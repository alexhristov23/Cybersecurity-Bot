{
    "manifest_version": 2,
    "name": "Chatbot Extension",
    "version": "1.0",
    "description": "Open the chatbot in a new tab",
    "icons": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "browser_action": {
      "default_icon": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
      },
      "default_title": "Chatbot",
      "default_popup": "popup.html"
    },
    "permissions": ["tabs"]
  }
  